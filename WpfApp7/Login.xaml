<Window x:Class="WpfApp7.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="Авторизация" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Height="160">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock>Введите логин:</TextBlock>
        <TextBox Name="login" Grid.Row="1" MinWidth="250"></TextBox>

        <TextBlock Margin="0,0,0,45" Grid.Row="2">Введите пароль:</TextBlock>
        <TextBox Name="password" Grid.Row="2" MinWidth="250" Margin="0,21,0,27"></TextBox>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,44,0,0">
            <Button IsDefault="True" Click="Login_Click" MinWidth="60" Margin="0,0,10,0">Войти</Button>
            <Button IsDefault="True" Click="Singup_Click" MinWidth="60" Height="25">Регестрация</Button>
        </WrapPanel>

    </Grid>
</Window>
